
mixin photogrid(gambar_1,back_Alt)
    img(src="https://www.w3schools.com/w3images/"+gambar_1 style="width:100%" onclick="onClick(this)" alt=back_Alt  )

mixin services_DesignerTemplate(ID,headerPage,p1,p2)
    .w3-container(id=ID, style="margin-top:75px")
        h1.w3-xxxlarge.w3-text-red 
            b= headerPage
        hr.w3-round(style="width:50px;border:5px solid red")
        p= p1
        p= p2

mixin theTeam(gambarTheTeam,alt_gambarTheTeam,namaTeam,p_1Team,p_2Team)
    .w3-col.m4.w3-margin-bottom
        .w3-light-grey
            img(src="https://www.w3schools.com/w3images/"+gambarTheTeam, alt= alt_gambarTheTeam, style="width:100%")
            .w3-container
                h3= namaTeam
                p.w3-opacity= p_1Team
                p=  p_2Team

    

